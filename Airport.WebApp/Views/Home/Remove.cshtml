@using Entities.Models

@model Guid
@{
    ViewData["Title"] = "Confirmation";
}
<div>
    <h2 class="mb-3">Удаление рейса</h2>

    <form method="post" asp-action="RemoveConfirmed">
        <input type="hidden" name="id" value="@Model" />

        <div class="alert alert-danger">
            Вы действительно хотите удалить рейс <strong>@Model</strong>?
        </div>

        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Worker" class="btn btn-secondary">Отмена</a>
    </form>
</div>